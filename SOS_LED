# Homework: makes the SOS sign using the LED
From machine import PIN
From time import sleep 
redLED = Pin(15, Pin.OUT)
short = 0.35
long = 0.75

while True:
	for i in range(3)
		redLED.value(1)
		sleep(short)
		redLED.value(0)
		sleep(short)

for i in range(3)
		redLED.value(1)
		sleep(long)
		redLED.value(0)
		sleep(long)

for i in range(3)
		redLED.value(1)
		sleep(short)
		redLED.value(0)
		sleep(short)
		
